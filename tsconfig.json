{
  "compilerOptions": {
    "baseUrl": "./",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/app/*": ["src/01_app/*/index"],
      "@/pages/*": ["src/02_pages/*/index"],
      "@/widgets/*": ["src/03_widgets/*/index"],
      "@/widgets/*": ["src/03_widgets/*"],
      "@/entities/*": ["src/04_entities/*/index"],
      "@/shared/*": ["src/04_shared/*/index"],
      "src/*": ["src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
